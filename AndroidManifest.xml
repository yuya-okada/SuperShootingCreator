<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gult.shootingcreator"
          android:versionCode="2"
          android:versionName="1.1">

    <uses-sdk android:minSdkVersion="8"/>

    <application
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:name="com.gult.shootingcreator.App">
        <activity
                android:name="com.gult.shootingcreator.edit.MainActivity"
                android:label="@string/title_activity_main"
                android:screenOrientation="portrait"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            >

        </activity>
        <activity
                android:name="com.gult.shootingcreator.foxone.InvaderGameActivity"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name="com.gult.shootingcreator.edit.PlayerOptionActivity"
                android:label="@string/title_activity_player_option">
        </activity>
        <activity
                android:name="com.gult.shootingcreator.edit.GridActivity"
                android:label="@string/title_activity_configuration_enemy">
        </activity>
        <activity
                android:name="com.gult.shootingcreator.edit.EnemyConfigTab"
                android:label="EnemyConfigTab">
        </activity>
        <activity
                android:name="com.gult.shootingcreator.edit.TitleActivitty"
                android:label="@string/title_activity_title_activitty">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.gult.shootingcreator.edit.StageChoose"
                android:label="@string/title_activity_title_activitty">
        </activity>

        <activity
                android:name="com.gult.shootingcreator.network.StoreActivity"
                android:label="Super Shooting Shore">

        </activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>